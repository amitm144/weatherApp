<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".ui.view.LocationListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20sp"
        android:paddingVertical="30sp">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Locations"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <SearchView
                android:id="@+id/searchLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="No locations yet" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_location_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/rv_my_locations" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/location_list_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            tools:listitem="@layout/rv_my_locations" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20sp"
            android:src="@drawable/ic_touch" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/refreshBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fab"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20sp"
            android:text="Refresh"
            android:visibility="invisible"
            app:icon="@drawable/ic_refresh" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/addLocationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/refreshBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="10sp"
            android:text="Add Location"
            android:visibility="invisible"
            app:icon="@drawable/ic_add" />

    </RelativeLayout>


</layout>